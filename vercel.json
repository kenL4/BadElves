{
    "rewrites": [
        {
            "source": "/",
            "destination": "/HTML/index.html"
        },
        {
            "source": "/(.*)",
            "destination": "/HTML/$1"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Cross-Origin-Opener-Policy",
                    "value": "same-origin"
                },
                {
                    "key": "Cross-Origin-Embedder-Policy",
                    "value": "require-corp"
                }
            ]
        }
    ]
}